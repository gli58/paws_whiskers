<h1 class="my-4">Shopping Cart</h1>

<% if @cart_items.empty? %>
  <div class="alert alert-info">
    Your cart is empty. <%= link_to "Continue shopping", root_path, class: "alert-link" %>
  </div>
<% else %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Subtotal</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |item| %>
          <tr>
            <td>
              <%= link_to item[:product].name, product_path(item[:product]) %>
            </td>
            <td><%= number_to_currency(item[:product].current_price) %></td>
            <td>
              <%= form_with url: update_cart_quantity_path(item[:product].id), method: :patch, local: true, class: 'd-inline-flex align-items-center' do |f| %>
                <%= f.number_field :quantity, value: item[:quantity], min: 0, class: 'form-control form-control-sm me-2', style: 'width: 80px' %>
                <%= f.submit "Update", class: 'btn btn-sm btn-outline-primary' %>
              <% end %>
            </td>
            <td><%= number_to_currency(item[:item_total]) %></td>
            <td>
              <%= button_to "Remove", remove_from_cart_path(item[:product].id),
                  method: :delete,
                  class: 'btn btn-sm btn-danger',
                  data: { turbo_confirm: 'Remove this item?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3" class="text-end">Subtotal:</th>
          <th><%= number_to_currency(@subtotal) %></th>
          <th></th>
        </tr>
      </tfoot>
    </table>
  </div>

  <div class="mt-4 d-flex justify-content-between">
    <div>
      <%= link_to "Continue Shopping", root_path, class: 'btn btn-outline-secondary' %>
      <%= button_to "Clear Cart", clear_cart_path, method: :delete, class: 'btn btn-outline-danger', data: { turbo_confirm: 'Clear entire cart?' } %>
    </div>
    <%= link_to "Proceed to Checkout", new_order_path, class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>