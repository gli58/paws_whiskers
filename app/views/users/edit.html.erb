<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h3>Edit Profile</h3>
        </div>
        <div class="card-body">
          <%= form_with model: @user, url: user_path, method: :patch, local: true do |f| %>

            <% if @user.errors.any? %>
              <div class="alert alert-danger">
                <h5><%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:</h5>
                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <h5 class="mb-3">Personal Information</h5>
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :first_name, "First Name", class: "form-label" %>
                <%= f.text_field :first_name, class: "form-control", placeholder: "John" %>
              </div>

              <div class="col-md-6 mb-3">
                <%= f.label :last_name, "Last Name", class: "form-label" %>
                <%= f.text_field :last_name, class: "form-control", placeholder: "Doe" %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :phone, "Phone Number", class: "form-label" %>
              <%= f.text_field :phone, class: "form-control", placeholder: "(204) 555-0123" %>
            </div>

            <hr class="my-4">

            <h5 class="mb-3">Shipping Address</h5>

            <div class="mb-3">
              <%= f.label :street_address, "Street Address", class: "form-label" %>
              <%= f.text_field :street_address, class: "form-control", placeholder: "123 Main Street" %>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :city, "City", class: "form-label" %>
                <%= f.text_field :city, class: "form-control", placeholder: "Winnipeg" %>
              </div>

              <div class="col-md-6 mb-3">
                <%= f.label :province_id, "Province", class: "form-label" %>
                <%= f.collection_select :province_id, Province.all, :id, :name,
                    { prompt: "Select Province" },
                    { class: "form-select" } %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :postal_code, "Postal Code", class: "form-label" %>
              <%= f.text_field :postal_code, class: "form-control", placeholder: "R3C 1A1" %>
            </div>

            <div class="d-grid gap-2 mt-4">
              <%= f.submit "Update Profile", class: "btn btn-primary btn-lg" %>
              <%= link_to "Cancel", user_path, class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>