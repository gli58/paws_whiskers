<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
  <div class="container-fluid">
    <%= link_to "Paws & Whiskers", root_path, class: "navbar-brand" %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
            Categories
          </a>
          <ul class="dropdown-menu">
            <% Category.order(:name).each do |category| %>
              <li><%= link_to category.name, category_path(category), class: "dropdown-item" %></li>
            <% end %>
          </ul>
        </li>

        <li class="nav-item">
          <%= link_to "About", page_path('about'), class: "nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to "Contact", page_path('contact'), class: "nav-link" %>
        </li>
      </ul>

      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to cart_path, class: "nav-link" do %>
            <i class="bi bi-cart"></i> Cart
            <% if session[:cart].present? && session[:cart].values.sum > 0 %>
              <span class="badge bg-danger"><%= session[:cart].values.sum %></span>
            <% end %>
          <% end %>
        </li>

        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "My Account", user_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "My Orders", orders_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link btn btn-link", data: { turbo: false } %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>